- @page_title = t('helpers.titles.show', { model: Item.model_name.human })

%div.show
  %div.row
    %div.col-sm-2
      %b= Item.human_attribute_name(:name)
    %div.col-sm-10
      = @item.name
  %div.row
    %div.col-sm-2
      %b= Item.human_attribute_name(:image)
    %div.col-sm-10
      = @item.image
  %div.row
    %div.col-sm-2
      %b= Item.human_attribute_name(:price)
    %div.col-sm-10
      = number_to_currency @item.price
  %div.row
    %div.col-sm-2
      %b= Item.human_attribute_name(:description)
    %div.col-sm-10
      = simple_format(@item.description)
  %div.row
    %div.col-sm-2
      %b= Item.human_attribute_name(:display_flag)
    %div.col-sm-10
      = boolean_to_human(@item.display_flag)
  %div.row
    %div.col-sm-2
      %b= Item.human_attribute_name(:stock)
    %div.col-sm-10
      = number_to_human(@item.stock, units: 'number.human.stock_units.units' )

