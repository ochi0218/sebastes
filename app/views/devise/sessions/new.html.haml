- @page_title = t('.title')

= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal col-sm-9' } do |f|

  = f.input :email, :required => false, :autofocus => true
  = f.input :password, :required => false
  = f.input :remember_me, :as => :boolean, wrapper: :checkbox if devise_mapping.rememberable?
  %br

  .form-actions
    = f.button :submit, t('.submit_button'), class: 'btn btn-primary'

= render "devise/shared/links"
