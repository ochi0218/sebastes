- @page_title = t('helpers.titles.list', { model: Item.model_name.human })

%p
  %span.pull-left= t('views.page_info.page', current: @items.current_page, total: @items.num_pages)
  %span.pull-right= t('views.page_info.records', offset: @items.offset_value+1, limit: (@items.offset_value + @items.length), total: @items.total_count)
  %span.clearfix

%table.table.table-striped.table-hover
  %tr
    %th= Item.human_attribute_name(:name)
    %th= Item.human_attribute_name(:image)
    %th= Item.human_attribute_name(:price)
    %th= Item.human_attribute_name(:display_flag)
    %th= Item.human_attribute_name(:stock)
    %th.action-col
    %th.action-col
    %th.action-col

  - @items.each do |item|
    %tr
      %td= item.name
      %td= item.image
      %td= number_to_currency item.price
      %td= boolean_to_human(item.display_flag)
      %td= number_to_human(item.stock, units: 'number.human.stock_units.units' )
      %td.action-col= link_to t('helpers.actions.show'), [:admin, item], class: 'btn btn-default btn-xs'
      %td.action-col
        = link_to edit_admin_item_path(item), class: 'btn btn-default btn-xs' do
          %i.glyphicon.glyphicon-edit
          = t('helpers.actions.edit')
      %td.action-col
        = link_to [:admin, item], method: :delete, data: { confirm: t('helpers.confirm.delete') }, class: 'btn btn-danger btn-xs btn-white' do
          %i.glyphicon.glyphicon-trash
          = t('helpers.actions.destroy')

= paginate @items

%br

= link_to new_admin_item_path, class: 'btn btn-primary btn-white' do
  %i.glyphicon.glyphicon-plus
  = t('helpers.titles.new', { model: Item.model_name.human })
