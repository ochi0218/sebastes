= simple_form_for :coupon, url: coupons_path, method: :patch, html: { class: 'form-horizontal' } do |f|
  - if notification = f.error_notification
    = notification

  = f.input :code, as: :string, label: Coupon.human_attribute_name(:code), input_html: { value: params[:coupon].nil? ? '' : params[:coupon][:code] }

  .form-actions
    = f.button :submit, class: 'btn-primary'

